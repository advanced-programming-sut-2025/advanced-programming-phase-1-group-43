package Model;

import java.util.ArrayList;
import java.util.Random;

public class Farm {
    //Fixed Element
    Cottage Cottage;
    GreenHouse GreenHouse;
    StoneMining stoneMining;
    Lake lake;
    //Random Element
    ArrayList<Tree> Trees = new ArrayList<>();
    ArrayList<Stone> stones;
    Random random = new Random();
    public static ArrayList<Integer> xLocations = new ArrayList<>();
    public static ArrayList<Integer> yLocations = new ArrayList<>();
    for(int i=0; i<(random.nextInt() % 20)+20;i++){
        int x = random.nextInt()%100;
        int y = random.nextInt()%100;
        while(xLocations.contains(x) && yLocations.contains(y)){
            x = random.nextInt()%100;
            y = random.nextInt()%100;
        }
        xLocations.add(x);
        yLocations.add(y);
        Trees.add(new Tree(x,y,random.nextBoolean()));
    }
    for(int i=0; i<(random.nextInt() % 20)+20;i++){
        int x = random.nextInt()%100;
        int y = random.nextInt()%100;
        while(xLocations.contains(x) && yLocations.contains(y)){
            x = random.nextInt()%100;
            y = random.nextInt()%100;
        }
        xLocations.add(x);
        yLocations.add(y);
        stones.add(new Stone(x,y));
    }

}
